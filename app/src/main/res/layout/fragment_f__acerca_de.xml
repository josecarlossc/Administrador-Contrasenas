<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmentos.F_AcercaDe">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="502dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/amath"/>


        <!--Desarrollador-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="@string/DesarrolladorTXT"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--Correo contacto-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="@string/CorreoContactoTXT"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--VersiÃ³n-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="@string/VersionTXT"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/Ir_sitio_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#008080"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/Ir_sitio_web"
            android:textColor="#fff" />

        <Button
            android:id="@+id/Ir_terminos_politicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#008080"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/Ir_terminos_politicas"
            android:textColor="#fff" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>